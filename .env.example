# ===== تنظیمات اصلی =====
DEBUG=True
SECRET_KEY=django-insecure-hospital-monitor-change-in-production-use-strong-key

# آدرس‌های مجاز (در production IP سرور را وارد کنید)
ALLOWED_HOSTS=localhost,127.0.0.1

# ===== دیتابیس =====
# برای توسعه از SQLite استفاده می‌شود
# برای production کامنت را بردارید:
# DB_NAME=hospital_monitor
# DB_USER=hospital_user
# DB_PASSWORD=your_secure_password
# DB_HOST=localhost
# DB_PORT=5432

# ===== Redis =====
REDIS_URL=redis://localhost:6379/0

# ===== MQTT (سنسورها) =====
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=hospital/devices

# ===== پیامک هشدار (Kavenegar) =====
KAVENEGAR_API_KEY=
# شماره‌ها با کاما جدا شوند
ALERT_SMS_NUMBERS=09120000000

# ===== Email =====
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# ===== CORS =====
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:8000
